<Window x:Class="Vinyl_store.OrderCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vinyl_store"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="OrderCodeWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="Спасибо за покупку!" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Лови свой код и покажи его на кассе:)" FontSize="14" TextAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock x:Name="OrderCodeTextBlock" FontSize="48" FontWeight="Bold" TextAlignment="Center"/>
        </StackPanel>
        <Button Content="" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Click="BackToCatalogButton_Click" Height="30" Width="30" BorderBrush="{x:Null}" Foreground="{x:Null}" Cursor="Hand">
            <Button.Background>
                <ImageBrush ImageSource="/17047.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
